@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="flex">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
            <button  type="submit" class="primary-btn">Logout</button>
        </form>
    </li>
}
else
{
    <a class="secondary-btn" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="primary-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>    
}
</ul>
