                    }
                </div>
            </div>
        </nav> *@
    </header>

    <div class="container ">
        <partial name="_CookieConsentPartial" optional />
        <main role="main" class="py-1 mt-14 md:mt-16">
            @RenderBody()
        </main>
    </div>

    
