@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex">
@if (SignInManager.IsSignedIn(User))
{
    
     <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
        <button id="logout" type="submit" class="primary-btn">Logout</button>
    </form>
}
else
{
    <a class="secondary-btn" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="primary-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
}
</div>
